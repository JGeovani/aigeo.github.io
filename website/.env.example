# SMTP configuration for server.js
# Fill these values in your environment or use a .env loader in production
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Optional: where contact form emails are sent (defaults to geovanis.business@gmail.com)
CONTACT_RECEIVER=geovanis.business@gmail.com

# Twilio (WhatsApp) optional
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+1415XXXXXXX
